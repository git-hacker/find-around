/**index.wxss**/
.uploadarea{
  border: 1px solid #ccc;
  width: 100rpx;
  height: 100rpx;
  position: relative;
  box-sizing: border-box;
  display: inline-block; 
  margin: 10rpx 0px 0px 10rpx;   
}
.imagearea{
  border: 1px solid #ccc;
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  margin: 10rpx 0px 0px 10rpx;
  box-sizing: border-box;
  position: relative;
}

.imagearea image{
  width: 100%;
  height: 100%;
}
.imagearea .clear{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -10rpx;
  right: -10rpx;
  z-index: 11;
}
.uploadarea::after,.uploadarea::before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: inline-block;
}
.uploadarea::after{
  width: 60rpx;
  height: 1px;
  border-top: 1px solid #ccc;  
}
.uploadarea::before{
  width: 1rpx;
  height: 60rpx;
  border-left: 1px solid #ccc;  
}